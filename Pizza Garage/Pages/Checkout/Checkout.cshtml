@page
@model Pizza_Garage.Pages.Checkout.CheckoutModel
@{
}
<h1>Your Order!</h1>
@{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src="@imagePath" class="w-100" asp-append-version="true"/> <!-- Image, css will not change after refresh-->
        <p>Your order for the <b>@Model.PizzaName</b> Pizza is ready!</p>
        <p>Total price for your order is: <b>$@Model.PizzaPrice</b></p>
        <br/>
        <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>
    </div>
</div>
